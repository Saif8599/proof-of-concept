<section class="match-game">
  <div class="match-game-info">
    <h1>Match Game</h1>
    <h2>leden van klas {{ class_id }}</h2>
    <p>
      <strong>Instructie:</strong>
      Selecteer voor elke profielfoto de juiste naam uit de dropdown lijst!
    </p>
  </div>

  <form method="post" action="/check-matches">
    <div class="container">
      <ul class="member-list">
        {% for member in members %}
          <li class="member-picture" id="pic-{{ member.id }}">
            <picture>
              <source srcset="/proxy-image?url={{ member.depiction_url }}" type="image/webp">
              <img
                src="/proxy-image?url={{ member.depiction_url }}"
                alt="Profiel van {{ member.profile.resource.title }}"
                width="100"
                height="100"
                loading="lazy">
            </picture>
            <select name="match-{{ member.id }}" required>
              <option value="">Selecteer naam</option>
              {% for member in members %}
                <option value="{{ member.id }}">{{ member.profile.resource.title }}</option>
              {% endfor %}
            </select>
          </li>
        {% endfor %}
      </ul>
    </div>

    <button type="submit">Controleer matches</button>
  </form>

  <div class="end-message">
    <h2>Goed gedaan! Alle matches zijn voltooid!</h2>
    <p>Wil je het nog eens proberen?</p>
    <a href="/class/55501" class="restart-button">Opnieuw spelen</a>
  </div>
</section>

<style>
  .match-game {
    max-width: 960px;
    padding: 1em;
    margin: auto;
  }

  .match-game-info p {
    margin-top: 10px;
  }

  .container {
    margin-top: 2em;
  }

  .member-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin: 0 auto;
  }

  @media (min-width: 765px) {
    .member-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1440px) {
    .member-list {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .member-list li {
    list-style: none;
    color: #263238;
    width: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .member-picture img {
    border: 1px solid black;
  }

  select {
    padding: 5px;
    min-width: 150px;
  }

  button {
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    border: none;
    cursor: pointer;
  }

  .end-message {
    display: none;
  }
</style>
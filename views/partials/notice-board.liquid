<section class="notice-board">
  <h1>Prikbord</h1>
  <div class="formField">
    <div class="avatar">
      <a href="#">
        <picture>
          <source srcset="https://i.pravatar.cc/400" type="image/avif">
          <img src="https://i.pravatar.cc/400" alt="Avatar">
        </picture>
      </a>
    </div>

    <form
      class="form"
      method="post"
      action="/notice-board">
      <textarea
        type="text"
        name="textArea"
        id="post"
        rows="3"
        placeholder="Wat denk jij ?"
        required></textarea>
      <button
        class=""
        type="submit"
        class="submit">Versturen</button>
    </form>
  </div>
</section>

<section class="comments">
  {% for message in messages %}
    <div class="comment">
         {{ message.message }}   
    </div>
  {% endfor %}
</section>

<style>
  /*  notice-board */
  .formField {
    width: fit-content;
    display: flex;
    margin: 0 auto;
    max-width: 90%;
    gap: 1em;

    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 10px black;
  }

  .avatar img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }

  .form {
    width: 300px;
    display: flex;
    flex-direction: column;
    gap: 1em;
  }

  textarea {
    width: 100%;
    resize: none;
  }

  /*  Comments */
  .comments {
    width: 300px;
    margin: 2em auto 0;
    max-width: 90%;

  }
</style>